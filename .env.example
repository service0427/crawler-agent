# Agent Configuration
PORT=3001
AGENT_ID=agent-1
BIND_ADDRESS=0.0.0.0

# Hub Connection
HUB_URL=https://your-hub-url:8443
HUB_SECRET=your-hub-secret-key
ALLOWED_HUB_IPS=hub.example.com,192.168.1.100

# Browser Settings
HEADLESS=false
DISPLAY=:0

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance
MAX_CONCURRENT_WORKFLOWS=2
HEARTBEAT_INTERVAL=10000

# Data Storage
USER_DATA_DIR=./data/users
LOG_DIR=./logs